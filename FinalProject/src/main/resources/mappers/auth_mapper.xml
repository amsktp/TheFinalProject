<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
 "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.snaptag.auth">

	<resultMap type="com.snaptag.auth.model.MemberVO" id="memberResultMap">
	
		<id column="MEMBER_NO" property="memberNo"/>
		<result column="MEMBER_NAME" property="memberName" />
		<result column="MEMBER_PASSWORD" property="memberPassword" />
		<result column="MEMBER_ID" property="memberId" />
		<result column="MEMBER_CREATED_DATE" property="memberCreatedDate" javaType="java.util.Date"/>
	
	</resultMap>
	
	<select id="memberExist" parameterType="map" resultMap="memberResultMap">
	
		SELECT MEMBER_NO, MEMBER_NAME, MEMBER_ID
		FROM MEMBER_TB
		WHERE MEMBER_ID = #{memberId}
		AND MEMBER_PASSWORD = #{memberPassword}
		
	</select>
	
</mapper>




